#!/usr/bin/bash

NC='\033[0m'
BOLD='\033[1m'
UNDERLINE='\033[4m'
BLACK='\033[30m'
RED='\033[31m'
GREEN='\033[32m'
YELLOW='\033[;33m'
BLUE='\033[34m'

# Background colors
Black='\033[40m'
Red='\033[41m'
Green='\033[42m'
Yellow='\033[43m'
Blue='\033[44m'
Magenta='\033[45m'
Cyan='\033[46m'
White='\033[47m'

prerequisites=(
    "git"
    "zsh"
    "tmux"
    "nvim"
)

echo -e "${YELLOW}Checking prerequisites...${NC}"
has_error=0
for item in ${prerequisites[@]}; do
    if ! command -v ${item} > /dev/null 2>&1; then
        if [ ${has_error} == 0 ]; then
            echo -en "You need to install: "
            has_error=1
        fi
        echo -en ${GREEN}${item}${NC}
    fi
done
echo ""
if [ has_error != 0 ]; then
    echo -e "Check files under ${UNDERLINE}prerequisite${NC} to find possible solutions."
    exit 1
else
    echo -e "${GREEN}All prerequisites have been met${NC}" 
fi

# Setup SSH key to Github
echo -en "Do you want to generate ssh-key to github now?[${BOLD}${UNDERLINE}Y${NC}/n]:"
read -r github_ssh
if [ -z ${github_ssh} ]; then
    github_ssh="Y"
fi
if [ ${github_ssh} = "Y" ]; then
    if [ -f ${HOME}/.ssh/id_ed25519 ]; then
        echo -e "${YELLOW}Key already exists.${NC}"
    else
        echo -en "Your email: (To connect to Github using ssh):"
        read Email
        ssh-keygen -t ed25519 -C ${Email}
    fi
    echo -e "${GREEN}The public key is:${NC}"
    cat ${HOME}/.ssh/id_ed25519.pub
fi

# Get Oh-my-zsh
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"

# Get zsh plugins
echo -e "${YELLOW}Getting oh-my-zsh plugins...${NC}"
chmod 700 ZshPlugins
. zsh_plugins

# Execute the sync script
echo -e "${BLUE}Synchronizing config files...${NC}"
chmod 700 sync_script
. sync_script

echo -e "All Done!"
echo -e "Type ${GREEN}source \${HOME}/.zshrc${NC} to work with a brand new shell!"

