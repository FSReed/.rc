# Install the newest version of neovim

echo -e "Installing neovim into /opt..."
wget https://github.com/neovim/neovim/releases/latest/download/nvim-linux64.tar.gz -q
sudo tar -C /opt -xzf nvim-linux64.tar.gz
echo "PATH=/opt/nvim-linux64/bin:\${PATH}" >> ${HOME}/.zshrc
rm nvim-linux64.tar.gz
echo -e "Done."

