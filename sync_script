#!/usr/bin/bash

Config_Dir="./config"

files_to_sync=(
    ".bashrc"
    ".zshrc"
    ".vimrc"
    ".tmux.conf"
    ".gitconfig"
    # Need special operation:
    "aliases.zsh"
)

NC='\033[0m'
BOLD='\033[1m'
UNDERLINE='\033[4m'
RED='\033[31m'
GREEN='\033[32m'
YELLOW='\033[33m'
BLUE='\033[34m'

# Background colors
Black='\033[40m'
Red='\033[41m'
Green='\033[42m'
Yellow='\033[43m'
Blue='\033[44m'
Magenta='\033[45m'
Cyan='\033[46m'
White='\033[47m'

for item in "${files_to_sync[@]}"; do
    echo -e "${YELLOW}Do you want to sync "$item"?${NC}"
    echo -en "${RED}CAUTION:${NC}This will overwrite the original file![${BOLD}${Cyan}Y${NC} to confirm syncing.]:"
    read choice
    if  [ "$choice" != "Y" ]; then
        echo -e "Doesn't sync ${item}\n\n"
        continue
    fi
    echo -e "Syncing ${item}"
    cp ${Config_Dir}/${item} ${HOME} > /dev/null 2>&1
done

# Sync oh-my-zsh settings

## Sync aliases.zsh
mv "${HOME}/aliases.zsh" "${ZSH}/custom"

echo -e "${GREEN}All config files are synchronized${NC}"

